{
  "name": "multimodal",
  "version": "1.0.0",
  "description": "a tool for teaching",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "watch": "webpack --config webpack.config.js --watch",
    "pack": "webpack --config webpack.config.js",
    "lint": "eslint src app/js",
    "lint:fix": "node_modules/.bin/eslint --fix src app/js",
    "package-linux": "electron-packager . Multimodal --overwrite --asar=true --platform=linux --arch=x64 --icon=src/icon.png --prune=true --out=build"
  },
  "build": {
    "appId": "com.multimodal.app",
    "productName": "multimodal",
    "buildVersion": "0.1",
    "nodeGypRebuild": true,
    "postinstall":"install-app-deps",
    "category": "public.app.education",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/periode/multimodal.git"
  },
  "keywords": [
    "electron",
    "teaching"
  ],
  "author": "pierre depaz",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/periode/multimodal/issues"
  },
  "homepage": "https://github.com/periode/multimodal#readme",
  "devDependencies": {
    "css-loader": "^0.28.8",
    "electron": "1.8.4",
    "electron-builder": "^20.15.1",
    "electron-webpack-plugin": "^2.0.0",
    "eslint": "^4.15.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "node-sass": "^4.7.2",
    "pug": "^2.0.0-rc.4",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-cli": "^2.1.4"
  },
  "dependencies": {
    "pug": "^2.0.0"
  }
}
