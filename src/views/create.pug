doctype
html
	head
		title Multimodal | Create a new lesson
		link(rel="stylesheet", href="./style.css")
		script(src="./main.js")
	body
		div.create-container
			div.create-course
				select.create-courses-list#course-list(onchange='selectCourse(this)' onfocus='this.selectedIndex = -1')
					each co in courses
						option(value= co.name, year= co.year, path= co.path)= co.name
					option(value='create-course') create new course...
			div.create-lesson
				input.create-lesson-title#title(placeholder='lesson title')
				div.content-holder
					div.prep-holder-create
						div.create-concept
							input.create-concept-name(placeholder='concept name')
							input.create-concept-tag(placeholder='concept tag')
							include includes/add-prep.pug
							div.content-holder
								div
							button.create-add-concept(onclick='addConcept(this)') +
							button.create-remove-concept(onclick='removeConcept(this)') -

			div.interface-buttons
				button.lesson-btn.create-lesson-save(onclick='saveLesson("prep")') save
				button.lesson-btn.create-lesson-exit(onclick='exitLesson()') exit
				div.msg-log#msg-log
