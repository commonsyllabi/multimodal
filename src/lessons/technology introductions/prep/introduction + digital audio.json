      "concept": "digital audio workstations",
      "notes": [],
      "prep": [
        {
          "tag": "",
          "text": "digital audio workstation = hardware + software",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "the software is composed of a mixing/recording interface,",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "audio plug-ins,",
          "type": "txt"
        },
        {
          "tag": "",
