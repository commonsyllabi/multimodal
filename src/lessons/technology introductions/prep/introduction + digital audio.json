    },
    {
      "concept": "creating",
      "notes": [],
      "prep": [
        {
          "tag": "",
          "text": "DAWs support sound synthesis, through virtual instruments",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "additive synthesis, substractive synthesis",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "notes are triggered by MIDI information",
          "type": "txt"
        }
      ],
      "tag": ""
    },
    {
      "concept": "transforming",
      "notes": [],
      "prep": [
        {
          "tag": "",
          "text": "effects add character to the sound, and give it a particular ambience",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "spectral effects (EQ, Panning)",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "filters",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "time-based effects (reverb, delay, echo)",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "modulating effects (chorus, pitch-shift)",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "dynamic effects (compression, distortion)",
          "type": "txt"
        },
        {
          "tag": "",
          "text": "envelopes give all of the above a different behaviour over time",
          "type": "txt"
        }
      ],
      "tag": ""
