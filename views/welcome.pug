doctype
html
	head
		meta(charset='utf8')
		title Multimodal - welcome
		script(src='./main.js')
		link(rel='stylesheet', href='./style.css')
	body
		div.container
			div.courses-container
				div.lessons
					each cl in courses
						div.inter-class
							div.inter-class-title= cl.title
							ul
								each lesson in cl.lessons
									li.welcome-lesson(onclick='setLesson(this, "'+cl.title+'","'+lesson+'")')= lesson

			div.buttons-container
				button.inter-btn-main(onclick='createLesson()') create
				button.inter-btn-main(onclick='editLesson()') edit
				button.inter-btn-main(onclick='openLesson()') open
