doctype
html
	head
		meta(charset='utf8')
		title Multimodal - welcome
		script(src='./create.js')
		link(rel='stylesheet', href='./style.css')
	body
		div.container
			div.lessons-container
				each cl in classes
					div.inter-class
						div.inter-class-title= cl.title
						ul
							each lesson in cl.lessons
								li
									button.inter-lesson(onclick='create("'+lesson+'")')= lesson
			div.create-container
				button.inter-btn(onclick='createLesson()') create
				button.inter-btn(onclick='openLesson()') open
