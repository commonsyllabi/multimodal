doctype
html
	head
		meta(charset='utf8')
		title Multimodal - welcome
		script(src='./main.js')
		link(rel='stylesheet', href='./style.css')
	body
		div.container
			div.courses-container
				div.lessons
					each cl in courses
						div.inter-class
							div.inter-class-title= cl.title
							ul
								each lesson in cl.lessons
									li.welcome-lesson(onclick='setLesson(this, "'+cl.title+'","'+lesson+'")', ondblclick='openLesson("'+cl.title+'", "'+lesson+'")')= lesson

			div.interface-buttons
				button.inter-btn-main(onclick='createLesson()') create
				button.inter-btn-main(onclick='editLesson()', disabled) edit
				button.inter-btn-main(onclick='editNotesLesson()', disabled) edit with notes
				button.inter-btn-main(onclick='openLesson()', disabled) open
				button.inter-btn-main(onclick='exportLesson()', disabled) export
				div.msg-log#msg-log 
