doctype
html
	head
		title Create a new lesson
		link(rel="stylesheet", href="./style.css")
		script(src="./main.js")
	body
		div.create-container
			div.create-course
				select.create-courses-list#course-list(onchange='selectCourse(this)')
					each cl in courses
						option(value= cl)= cl
					option(value="new course", selected) new course
				input.create-new-course#new-course(type='text')
				div.create-path
					input.show-local-path#local-path(type='text', placeholder='course folder path', value='')
					button.create-local-path(onclick='selectCoursePath(this)') select
			div.create-lesson
				input.create-lesson-title#title(placeholder='lesson title')
				div.create-concept
					input.create-concept-name(placeholder='concept name')
					div.create-note
						include includes/add-note.pug
					div.create-note
						input.create-concept-note(type='text', kind='text', placeholder='text')
						include includes/add-note.pug
					button.create-add-concept(onclick='addConcept(this)') +
					button.create-remove-concept(onclick='removeConcept(this)') -

			div.interface-buttons
				button.lesson-btn.create-lesson-save(onclick='saveLesson()') save
				button.lesson-btn.create-lesson-exit(onclick='exitLesson()') exit
				div.msg-log#msg-log 
