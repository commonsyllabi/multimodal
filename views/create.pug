doctype
html
	head
		title Create a new lesson
		link(rel="stylesheet", href="./style.css")
		script(src="./main.js")
	body
		div.create-container
			div.create-course
				select.create-courses-list(onchange='selectCourse(this)')
					each cl in courses
						option(value= cl)= cl
					option(value="new course", selected) new course
				input.create-new-course#new-course(type='text')
				button.create-btn(onclick='selectCourse("custom")') set
			div.create-lesson
				input.create-lesson-title#title(placeholder='lesson name')
				div.create-concept
					input.create-concept-name(placeholder='concept name')
					div.create-note
						input.create-concept-note(type='text', kind='text', placeholder='text')
						select.create-add-note(onchange='addNote(this)')
							option(value='add') - +
							option(value="text") - text
							option(value="url") - link
							option(value="img") - image
						button.create-remove-note(onclick='removeNote(this)') -
					button.create-add-concept(onclick='addConcept(this)') +
					button.create-remove-concept(onclick='removeConcept(this)') -

			div.interface-buttons
				button.lesson-btn.create-lesson-save(onclick='saveLesson()') save
				button.lesson-btn.create-lesson-exit(onclick='exitLesson()') exit

